{
  "name": "Swift iOS Dev Container (xtool + zsign + theos)",
  "build": {
    "dockerfile": "Dockerfile"
  },
  "customizations": {
    "vscode": {
      "extensions": [
        "sswg.swift-lang",
        "vadimcn.vscode-lldb",
        "ms-vscode.cpptools",
        "ms-vscode.cmake-tools"
      ],
      "settings": {
        "swift.path": "/usr/local/bin/swift",
        "lldb.library": "/usr/local/lib/liblldb.so",
        "typescript.validate.enable": false,
        "javascript.validate.enable": false,
        "typescript.tsc.autoDetect": "off",
        "npm.autoDetect": "off",
        "js/ts.implicitProjectConfig.checkJs": false
      }
    }
  },
  "remoteUser": "vscode",
  "features": {},
  "postCreateCommand": "swift --version && xtool --help && zsign && echo 'THEOS='$THEOS"
}
